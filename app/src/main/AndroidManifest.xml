<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liverpoolteamapp">

    <!-- Aadf permission for wikipedia -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Liverpoolteamapp">

        <!-- MainActivity with android:exported -->
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Add this line -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Player Details -->
        <activity android:name=".PlayerDetailsActivity"
            android:exported="true" />

        <!-- WebViewActivity -->
        <activity android:name=".WebViewActivity"
            android:exported="true" />

        <!-- More Details -->
        <activity android:name=".PlayerMoreDetailsActivity" />

    </application>

</manifest>
